= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg
  = f.fields_for :image, @card.image do |img|
    = img.file_field :filename

  .actions
    = f.submit 'Save'
